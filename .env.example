# Azure AI IT Copilot Configuration
# Copy this file to .env and configure with your actual values

# ================================
# ENVIRONMENT CONFIGURATION
# ================================
ENVIRONMENT=development
DEBUG=true
APP_NAME="Azure AI IT Copilot"
APP_VERSION="1.0.0"

# ================================
# API CONFIGURATION
# ================================
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ================================
# AZURE AUTHENTICATION
# ================================
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_RESOURCE_GROUP=rg-ai-copilot
AZURE_LOCATION=eastus

# ================================
# AZURE OPENAI CONFIGURATION
# ================================
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-openai-key-here
AZURE_OPENAI_MODEL=gpt-4
AZURE_OPENAI_TEMPERATURE=0.1

# ================================
# DATABASE CONFIGURATION
# ================================
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-key-here
COSMOS_DB_NAME=aiitcopilot

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# ================================
# SECURITY CONFIGURATION
# ================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Authentication (Change these in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-in-production
# For production, generate a hash and use ADMIN_PASSWORD_HASH instead:
# python -c "from passlib.context import CryptContext; print(CryptContext(schemes=['bcrypt']).hash('your-password'))"
# ADMIN_PASSWORD_HASH=$2b$12$your-hashed-password-here

# Deployment Configuration
RESOURCE_GROUP=rg-ai-copilot
LOCATION=eastus
ACR_NAME=aicopilotacr
AKS_CLUSTER_NAME=aks-ai-copilot
REDIS_NAME=redis-ai-copilot
APP_INSIGHTS_NAME=ai-copilot-insights
LOG_ANALYTICS_WORKSPACE=ai-copilot-logs

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Application Settings
APP_NAME=Azure AI IT Copilot
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# Feature Flags
ENABLE_AUTO_REMEDIATION=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_COST_OPTIMIZATION=true
ENABLE_COMPLIANCE_CHECKS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Database (if using SQL instead of Cosmos)
# DATABASE_URL=postgresql://user:password@localhost/ai_copilot

# Cosmos DB (optional)
# COSMOS_ENDPOINT=https://your-cosmos.documents.azure.com:443/
# COSMOS_KEY=your-cosmos-key
# COSMOS_DATABASE=ai-copilot

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Email Notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# NOTIFICATION_EMAIL=admin@example.com