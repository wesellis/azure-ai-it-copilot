{
  "name": "@azure-ai-copilot/platform",
  "version": "1.0.0",
  "description": "AI-powered IT operations platform for Azure infrastructure management",
  "main": "api/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\"",
    "dev:api": "nodemon api/server.js",
    "dev:dashboard": "cd dashboard && npm run dev",
    "build": "npm run build:api && npm run build:dashboard",
    "build:api": "tsc",
    "build:dashboard": "cd dashboard && npm run build",
    "start": "node api/server.js",
    "test": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "azure",
    "ai",
    "it-operations",
    "automation",
    "infrastructure",
    "natural-language",
    "gpt-4",
    "langchain",
    "aiops"
  ],
  "author": "Wesley Ellis <wes@wesellis.com>",
  "license": "MIT",
  "dependencies": {
    "@azure/identity": "^4.0.0",
    "@azure/arm-resources": "^5.2.0",
    "@azure/arm-compute": "^21.0.0",
    "@azure/arm-network": "^31.0.0",
    "@azure/arm-storage": "^18.2.0",
    "@azure/cosmos": "^4.0.0",
    "@azure/keyvault-secrets": "^4.7.0",
    "@azure/monitor-query": "^1.2.0",
    "@azure/openai": "^1.0.0-beta.11",
    "@langchain/community": "^0.0.50",
    "@langchain/core": "^0.1.30",
    "@langchain/openai": "^0.0.25",
    "express": "^4.18.2",
    "fastify": "^4.25.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "redis": "^4.6.12",
    "socket.io": "^4.6.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.5",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "langchain": "^0.1.25"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesellis/azure-ai-it-copilot.git"
  },
  "bugs": {
    "url": "https://github.com/wesellis/azure-ai-it-copilot/issues"
  },
  "homepage": "https://github.com/wesellis/azure-ai-it-copilot#readme"
}